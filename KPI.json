{
	"name": "KPITemplate",
	"visualStyles": {
		"kpi": {
			"*": {
				"general": [{
					"responsive": true,
					"keepLayerOrder": true
				}],
				"background": [{
					"show": true,
					"color": { "solid": { "color": "#FFFFFF"}},
					"transparency": 0
				}],
				"border": [{
					"color": { "solid": { "color": "#808080"}},
					"show": true,
					"radius": 0
				}],
				"dropShadow": [{
					"show": true,
					"angle": 45,
					"color": {
					    "solid": {
						"color": "#666666"
					    }
					},
					"position": "Outside",
					"preset": "Custom",
					"shadowBlur": 0,
					"shadowDistance": 5,
					"shadowSpread": 1,
					"transparency": 70
				}],
				"title": [{
					"show": true,
					"fontColor": { "solid": { "color": "#000000" } },
					"background": { "solid": { "color": "#FFFFFF" } },
					"alignment": "center"
				}],
				"indicator": [{
					"indicatorDisplayUnits": "Auto",
					"fontSize": 20,
					"indicatorPrecision": 1,
					"showIcon": true,
					"iconSize": 15,
					"horizontalAlignment": "left",
					"verticalAlignment": "top"
				}],
				"trendline": [{
					"show": true
				}],
				"goals": [{
					"showGoal": true,
					"goalFontColor": { "solid": { "color": "#E044A7" } },
					"showDistance": true,
					"distanceFontColor": { "solid": { "color": "#744EC2" } }
				}],
				"status": [{
					"direction": "Negative",
					"goodColor": { "solid": { "color": "#01B8AA"}},
					"neutralColor": { "solid": { "color": "#FFB8DD"}},
					"badColor": { "solid": { "color": "#018866"}}
				}]
			}
		}
	}
}
